<!DOCTYPE html>
<html>
  <head>
    <title>Webpage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;500&family=Share+Tech+Mono&family=Space+Mono&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <%= yield %>

    <script>
      let more = document.querySelectorAll('.more')
      let hide = document.querySelectorAll('.content')
      // let anchors = document.querySelectorAll('scroll_to')

      for (let i = 0; i < more.length; i++) {
        more[i].addEventListener('click', function() {
          hide[i].classList.toggle('content')
          if (more[i].innerHTML == 'More') {
            more[i].innerHTML = 'Less'
          } else {
            more[i].innerHTML = 'More'
          }
        })
      }
    </script>
  </body>
</html>
